{
  "builds": [
    {
      "src": "/Backend-Soul/dist/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    },
    {
      "src": "/Frontend-Body/dist/index.html",
      "use": "@vercel/static-build"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/Backend-Soul/dist/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/Frontend-Body/dist/index.html"
    }
  ]
}
